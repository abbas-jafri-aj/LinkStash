{
  "manifest_version": 3,
  "name": "LinkStash",
  "version": "1.0.0",
  "description": "Collect links as Plain URLs and Markdown",
  "icons": {
  "16": "icons/icon-16.png",
  "32": "icons/icon-32.png",
  "48": "icons/icon-48.png",
  "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "action": {
  "default_title": "LinkStash",
  "default_icon": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "sidebar_action": {
    "default_title": "LinkStash",
    "default_panel": "sidebar/sidebar.html"
  },
  "commands": {
    "save-link": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Save focused link to LinkStash"
    }
  }
}