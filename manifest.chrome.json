{
  "manifest_version": 3,
  "name": "LinkStash",
  "version": "1.0.0",
  "description": "Collect links as Markdown",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "sidePanel",
    "scripting"
  ],
  "action": {
    "default_title": "LinkStash"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "commands": {
    "save-link": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Save focused link to LinkStash"
    }
  }
}